{
  "name": "@origin/relayer",
  "version": "1.0.0",
  "description": "Relayer for Meta Transactions",
  "main": "src/aoo.js",
  "scripts": {
    "build": "per-env",
    "build:production": "babel src -d dist",
    "lint": "eslint '**/*.js' && npm run prettier:check",
    "prettier": "prettier --write *.js \"**/*.js\"",
    "prettier:check": "prettier -c *.js \"**/*.js\"",
    "start": "per-env",
    "start:development": "nodemon -r ./src/env.js src/app.js",
    "start:production": "node -r ./src/env.js src/app.js",
    "test": "mocha --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OriginProtocol"
  },
  "keywords": [
    "Origin Protocol",
    "Ethereum",
    "DApp"
  ],
  "author": "Shahul Hameed",
  "license": "MIT",
  "dependencies": {
    "@origin/contracts": "^0.8.6",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "envkey": "^1.2.6",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "mock-require": "^3.0.3",
    "per-env": "^1.0.2",
    "prettier": "^1.17.0",
    "web3": "1.0.0-beta.34"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11",
    "supertest": "^4.0.2"
  },
  "localDependencies": {
    "@origin/contracts": "../packages/contracts"
  }
